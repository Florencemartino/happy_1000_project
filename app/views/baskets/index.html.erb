

<h1>Liste de course générale :</h1>
<ul>
  <% @event.whishlists.each do |whishlist| %>
    <li>
      <%= link_to whishlist.item.name %>
      <%= image_tag whishlist.item.icon %>
    </li>
  <% end %>
</ul>


<h1>Mon panier :</h1>

<ul>
  <% current_user.baskets.each do |basket| %>
   <li> <%= basket.whishlist.item.name %>
    <%= image_tag basket.whishlist.item.icon %>
  </li>

   <%= link_to "Ajouter un prix", edit_event_basket_path(@event, basket) %>
   <% if basket.price_in_cent.nil? %>
   <%= puts "ton #{basket.whishlist.item.name} n'a pas de prix" %>
   <% else  %>
   <%= basket.price_in_cent %> €
   <% end %>
  <% end %>
</ul>




