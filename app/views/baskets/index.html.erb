

<h1>Liste de course générale :</h1>
<ul>
  <% @event.whishlists.each do |whishlist| %>
    <li>
      <%= link_to whishlist.item.name %>
      <%= image_tag whishlist.item.icon %>
    </li>
  <% end %>
</ul>

<h1>Mon panier :</h1>

<ul>
  <% current_user.baskets.each do |item| %>
   <li> <%= item.whishlist.item.name %>
    <%= image_tag item.whishlist.item.icon %>
  </li>
   <%#= link_to "Ajouter un prix", edit_basket_path(@basket) %>
  <% end %>
</ul>




