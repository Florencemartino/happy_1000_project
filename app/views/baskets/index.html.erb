


<!-- <div class="container"> -->
 <%= render layout: "shared/main_layout", locals: {
  main_title: "Qu'est-ce qu'on ramÃ¨ne ?",
} do %>

   <div class="card card-items category flex-wrap">
    <% @whishlists.each do |whishlist| %>
      <div id="whishlist-item-id-<%= whishlist.id %>" class="quantity-css-basket text-center">
        <%= render 'whishlist-update', event: @event, whishlist: whishlist %>
      </div>
    <% end %>
  </div>





  <h1>Mon panier</h1>

  <div class="card card-items category flex-wrap" id="choice-card">
      <% if @baskets.blank? %>
          <p id="empty-basket"> Ton panier est vide </p>
          <% end %>
     <% @baskets.each do |basket| %>
        <div class="quantity-css-basket text-center basket-font-size" id="basket-item-id-<%= basket.id %>">
          <%= render 'button-choice', basket: basket %>
        </div>
    <% end %>
  </div>


  <div class="button-center">
    <%= link_to "Valider", event_dashboard_path(@event), :class => "btn btn-info mauve org-meal"%></div>
  </div>

<% end %>
