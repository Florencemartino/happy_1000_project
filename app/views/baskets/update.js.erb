function updateChoice() {
  const choiceQuantity = document.getElementById("basket-item-id-<%= @basket.id %>");
  const whishlistQuantity = document.getElementById("whishlist-item-id-<%= @whishlist.id %>");
  choiceQuantity.innerHTML = "<%= j render 'button-choice', basket: @basket %>";
  whishlistQuantity.innerHTML = "<%= j render 'whishlist-update', whishlist: @whishlist %>";
  <% if @basket.quantity.zero? %>
  choiceQuantity.remove();
  <% end %>
}

updateChoice();

