
<%= render layout: "shared/main_layout", locals: {
  main_title: "C'est l'heure des comptes :",
} do %>

  <div class="card card-account card-account-body">
    <% average = @total/(@guests.count) %>
    <strong> Total : <%= @total %> € (<%= average.to_f %>€/ pers)</strong>

    <% if @total == 0 %>
      <div class="nobody-paid"> <em> (Personne n'a renseigné le prix de son meal) </em> </div>
    <% else %>
    <% @refund_per_person.each do |user, refunds| %>
    <div class="container-account">

      <div class="box-account">
          <% if user.photo.blank?%>
            <%= image_tag "default-user.png", alt: "alttext", class: "avatar avatar-account", id: "navbar-wagon-menu" %>
          <% else %>
            <%= cl_image_tag user.photo, height: 50, width: 50, crop: :fill %>
          <% end %>
          <p><%= user.nickname %></p>

      </div>

      <div class="box-account">
        <% refunds.each do |refund, amount| %>
         <p> <%= amount %>€ <br> -----------> </p>
      </div>

      <div class="box-account">
           <%= cl_image_tag user.photo, height: 50, width: 50, crop: :fill %><%= refund.nickname %>
        <% end %>
      </div>

    </div>
    <% end %>

<% end %>

  </div>

  <div class="button-center">
  <%= link_to "Retour", event_dashboard_path(@event), :class => "btn btn-info mauve org-meal" %>
  </div>
<% end %>

