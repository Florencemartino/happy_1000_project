
<h1 class="text-center"><%= @event.title %></h1>
<div class="text-center"><em>crée par <%= @event.user.nickname %></em></div>

<div class="details-container">
  <div class="event-details">
    <p><%= image_tag "calendar.png", alt: "calendar", class: 'small-icon' %> <%= @event.date.strftime("%A %d %B %Y à %H:%M") %></p>
    <p><%= image_tag "house.png", alt: "house", class: 'small-icon' %> <%= @event.address %></p>
    <p><%= image_tag "cutlery.png", alt: "cutlery", class: 'small-icon' %> <%= link_to "#{@event.guests.count + 1} invités", event_guests_path(@event) %></p>
    <% if @event.user == current_user %>
      <p><%= image_tag "chef.png", alt: "chef-hat", class: 'small-icon' %> Vous êtes l'organisateur</p>
    <% elsif current_user.guests.first.is_coming %>
      <p><i class="fas fa-check-circle"></i> Je participe</p>
    <% else %>
      <p><i class="fas fa-times-circle"></i> Je ne participe pas</p>
    <% end %>
    <p><%= image_tag "info.png", alt: "alttext", class: 'small-icon' %> Description</p>
    <div id="description-details">
      <p class="description-content"><%= @event.description %></p>
    </div>
  </div>
  <div class="buttons-index">
    <div class="btn btn-primary btn-nav nav-dashboard"><%= link_to "Equilibres", event_account_path(@event)%></div>
    <div class="btn btn-primary btn-nav nav-dashboard"><%= link_to "Voir mon panier", event_baskets_path %></div>
  </div>
</div>

<!-- LISTE LES GENS QUI VIENNENT AVEC LEUR BASKET -->

<!-- LES GENS QUI NE VIENNENT PAS NE SERONT PAS AFFICHES ICI, MAIS DANS L'INDEX DES GUESTS VIA UN TAB/ONGLET : "PARTICIPE / NE PARTICIPE PAS"     -->
<div id="rest-of-content">
  <h3 class="text-center">On ramène quoi?</h3>
    <div class="container-dashboard">
      <% @baskets_per_user.each do |user, baskets| %>
        <div class="box-dashboard">
          <% if user.photo.blank?%>
            <%= image_tag "default-user.png", alt: "alttext", class: "avatar", id: "navbar-wagon-menu" %>
          <% else %>
            <%= cl_image_tag user.photo, height: 50, width: 50, crop: :fill %>
          <% end %>
          <%= user.nickname %>
          <% if user == @event.user %>
            <em>(organisateur)</em>
          <% end %>
        </div>
          <% baskets.each do |basket| %>
      <div class="box-dashboard">
            <%= basket.whishlist.item.name %><%= image_tag basket.whishlist.item.icon %>
          <% end %>
      <hr>
      </div>
    </div>
      <% end %>
</div>

<hr>
<div class="footer-dashboard">
  <p>Total de repas :<%= @total %> € </p>
</div>
