<h2 class="text-center">Qui sera de la party ?</h2>

<div class="container text-center">
  <div>
  <%= simple_form_for :query, method: :get, html: { class: "form-inline" } do |f| %>
      <%= f.input :nickname, as: :string, placeholder: "Tape le nom de ton petit pote" %>
      <%= f.button :submit, "Rechercher", class: 'btn btn-success' %>
  <% end %>
  </div>

  <br>
  <br>

<%= simple_form_for :guest_ids, method: :post, url: event_guests_path(@event) do |f|%>
  <div class="form-check form-check-inline">
    <% @guests.each do |guest|%>
      <input class="form-check-input" type="checkbox" id='<%= "inlineCheckbox#{guest.id}" %>' value='<%= "#{guest.id}" %>' name="guests_ids[]">
      <label class="form-check-label" for='<%= "inlineCheckbox#{guest.id}" %>'>

        <%= guest.nickname %>
        <% if guest.photo.blank? %>
          <%= image_tag "icons/user.png", alt: "alttext" %>
        <% else %>
          <%= cl_image_tag guest.photo, height: 100, width: 100, crop: :fill, radius: 80 %>
        <% end %>
      </label>
    <% end %>
      <%= f.submit "Envoyer l'invit' !", class: "btn btn-primary" %>
  </div>
<% end %>

  <hr>
  <br>
  <%= link_to "Continuer", event_dashboard_path(@event) %>

</div>



