<h2 class="text-center">Qui sera de la party ?</h2>

<div class="container text-center">


<!-- DRAFT DYNAMIC CHECKBOXES SANS LE SEARCH - DRAFT DYNAMIC CHECKBOXES SANS LE SEARCH  -->

  <%= simple_form_for :guest_ids, method: :post, url: event_guests_path(@event) do |f|%>
    <div class="form-group">

      <div class="guest-choices">
        <% @guests.each do |guest|%>

          <input type="checkbox" id='<%= "inlineCheckbox#{guest.id}" %>' value='<%= "#{guest.id}" %>' name="guests_ids[]">

          <label for='<%= "inlineCheckbox#{guest.id}" %>'>
            <div class="guest-choice">
              <% if guest.photo.blank? %>
                <%= image_tag "default-user.png",height: 50, width: 50, crop: :fill, alt: "alttext", class: "avatar-bordered" %>
              <% else %>
                <%= cl_image_tag guest.photo, height: 50, width: 50, crop: :fill, class: "avatar-bordered" %>
              <% end %>
            </div>

            <div class="text-center">
              <%= guest.nickname %>
            </div>
          </label>
        <% end %>
      </div>

      <div class="text-center">
        <%= f.submit "Envoyer l'invit' !", class: "btn btn-primary" %>
      </div>

    </div>
  <% end %>
</div>



