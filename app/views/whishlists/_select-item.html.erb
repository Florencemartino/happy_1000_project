<% if item.category == category %>
  <%= link_to event_whishlists_path(event, item: item.id, sens: "1"), class: "quantity-css text-center", method: :post, remote: true do %>
    <div class="food-item">
      <%= image_tag item.icon, class: "icon-selection" %>
      <p><%= item.name %></p>
      <span class="icon-badge <%= "d-none" unless whishlists_per_item[item] %>" id="item-badge-<%= item.id %>"><%= whishlists_per_item[item].quantity if whishlists_per_item[item] %></span>
    </div>

  <% end %>
<% end %>
