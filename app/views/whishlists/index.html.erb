                            <i class="fas fa-plus-circle"></i>
                        <% end %>
                      </li>
                    <% end %>
                  <% end %>
              </ul>
            </div>
          </div>

        </div>
      </div>

      <div class="card category">
        <ul class="list-inline" id="basket-card">
          <p class= "text-center"> Sélection : </p>
          <% @whishlists.each do |whishlist| %>
            <li id="whishlist-item-id-<%= whishlist.id %>">
              <%= render 'button-basket', whishlist: whishlist %>
            </li>
          <% end %>
        </ul>
      </div>

  <div class="row btn-flex">
    <div class="col-xs-4">
      <%= link_to "Valider",  event_select_guest_path, :class => "btn btn-primary" %>
    </div>
  </div>
</div>



