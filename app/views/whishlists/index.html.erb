<div class="container whishlist-container">
  <h2>Qu'as-tu besoin pour ton meal ?</h2>
  <!-- <div class="row card-container">
    <div class="col-xs-6 col-sm-6 col-md-6"> -->

      <div class="buttons-index">
        <div class="btn btn-primary btn-nav2 nav11">Salé</div>
        <div class="btn btn-primary btn-nav2 nav22">Sucré</div>
        <div class="btn btn-primary btn-nav2 nav33">Soft</div>
        <div class="btn btn-primary btn-nav2 nav44">Alcool</div>
      </div>

      <div class="slider-container">
        <div class="slider2 sale">

          <div class="slide-food">
            <div class="card category">
              <ul class="list-inline">
                <p class= "text-center"> Salé </p>
                  <% @items.each do |item| %>
                    <% if item.category == "salé" %>
                      <li>
                        <%= image_tag item.icon %>
                        (<%= item.name %>)

                        <%= link_to event_whishlists_path(@event, item: item.id), class: "quantity-css", method: :post, remote: true do %>
                            <i class="fas fa-plus-circle"></i>
                        <% end %>
                      </li>
                    <% end %>
                  <% end %>
              </ul>
            </div>
          </div>

          <div class="slide-food">
            <div class="card category">
              <ul class="list-inline">
