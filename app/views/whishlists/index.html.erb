<div class="container whishlist-container">
  <h1>Créé ta whishlist</h1>
  <div class="row card-container">
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="card">
        <ul class="list-inline">
          <% @items.each do |item| %>
            <li>
              <%= image_tag item.icon %>
              (<%= item.category %>)

              <%= link_to event_whishlists_path(@event, item: item.id), class: "quantity-css", method: :post do %>
                  <i class="fas fa-plus-circle"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="card">
        <ul class="list-inline">
          <% @whishlists.each do |whishlist| %>
            <li>
              <%= link_to event_whishlist_path(whishlist.event.id, whishlist.id, sens: '-1' ), method: :patch, class: "quantity-css" do %>
                <i class="fas fa-minus"></i>
              <% end %>

              <%= image_tag whishlist.item.icon %>

              <%= link_to event_whishlist_path(whishlist.event_id, whishlist.id, sens: '1'), class: "quantity-css", method: :patch do %>
                  <i class="fas fa-plus"></i>
              <% end %>

              : <%= whishlist.quantity %>

              <%=link_to event_whishlist_path(whishlist.event_id, whishlist.id), method: :delete, data: { confirm: "Do you realy want to delete this item ?" } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
