                            <i class="fas fa-plus-circle"></i>
                        <% end %>
                      </li>
                    <% end %>
                  <% end %>
              </ul>
            </div>
          </div>

          <div class="slide-food">
            <div class="card category">
              <ul class="list-inline">
                <p class= "text-center"> Alcool </p>
                  <% @items.each do |item| %>
                    <% if item.category == "alcool" %>
